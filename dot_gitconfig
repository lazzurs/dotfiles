[core]
	editor = vim
	autocrlf = input
[pull]
	rebase = false
[push]
    autoSetupRemote = true
[init]
	defaultBranch = main

[includeIf "gitdir:~/.local/"]
	path = ~/.local/.gitconfig

[includeIf "gitdir:~/git/triton/"]
    path = ~/git/triton/.gitconfig

[includeIf "gitdir:~/git/github/"]
	path = ~/git/github/.gitconfig

